@page "/record"
@rendermode InteractiveServer
@inject NavigationManager NavManager
@using Hospital.Data.DAO
@using Hospital.Data.Entities
@inject DialogService DialogService

<PageTitle>Patient Visit Record</PageTitle>

<style>
    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1rem;
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1rem;
        text-align: left;
        border: 1px solid #444;
        background-color: darkcyan;
        color: #f1f1f1;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
    }

        .table thead th {
            background-color: darkblue;
            color: #ffffff;
            padding: 12px;
            font-weight: bold;
            text-align: center;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

            .table tbody tr:nth-child(odd) {
                background-color: cornflowerblue;
            }

            .table tbody tr:nth-child(even) {
                background-color: cornflowerblue;
            }

            .table tbody tr:hover {
                background-color: blue;
            }

        .table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #444;
        }

            .table td:first-child,
            .table th:first-child {
                text-align: left;
            }

            .table td:last-child {
                text-align: right;
            }

    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .form-container {
        margin: 30px auto;
        max-width: 600px;
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

        .form-container h2 {
            color: #007bff;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-container div {
            margin-bottom: 15px;
        }

        .form-container input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

            .form-container input[type="text"]:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }
</style>

<h1>Patient Visit Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Appointment Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in AllPatients)

        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.DOB.ToString("yyyy-MM-dd")</td>
                <td>@item.VisitDate.ToString("g")</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => AddDiagnosis(item)">Add Diagnosis</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (addedDiagnosis != null)

{
    <div class="form-container">
        <h2>Add Diagnosis for @addedDiagnosis.Name</h2>
        <div>
            <label for="diagnosis">Diagnosis</label>
            <input type="text" id="diagnosis" @bind="Diagnosis" placeholder="Enter diagnosis" />
        </div>
        <div>
            <label for="medicine">Medicine</label>
            <input type="text" id="medicine" @bind="Medicine" placeholder="Enter prescribed medicine" />
        </div>
        <button class="btn btn-primary" @onclick="SaveDiagnosis">Save</button>
        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
    </div>
}

else

{
    <p style="text-align:center; color: #555; font-size: 1rem;">No patient selected for adding diagnosis.</p>
}

@code {
    [Inject]

    public ApplicationDBContext context { get; set; }



    List<Patient> AllPatients { get; set; } = new List<Patient>();

    Patient addedDiagnosis { get; set; }

    string Diagnosis { get; set; }

    string Medicine { get; set; }



    protected override void OnInitialized()

    {

        AllPatients = context.Patients.ToList();

    }



    private void AddDiagnosis(Patient patient)

    {

        addedDiagnosis = patient;

    }



    private void SaveDiagnosis()

    {

        var record = new DiagnosisRecord

            {

                PatientID = addedDiagnosis.ID,

                PatientName = addedDiagnosis.Name,

                Diagnosis = Diagnosis,

                Medicine = Medicine

            };



        context.DiagnosisRecords.Add(record);

        context.SaveChanges();



        Diagnosis = "";

        Medicine = "";

        addedDiagnosis = null;



        NavManager.NavigateTo("/diagnosisList");

    }



    private void CancelEdit()

    {

        Diagnosis = "";

        Medicine = "";

        addedDiagnosis = null;

    }
}
